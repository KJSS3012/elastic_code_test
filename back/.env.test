# Configuração para testes
NODE_ENV=test
PORT=3001

# Database de teste (SQLite em memória)
DATABASE_URL=:memory:
DB_TYPE=sqlite
DB_DATABASE=:memory:
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_DROP_SCHEMA=true

# JWT Configuration
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRATION=1h

# Outros serviços (mocks ou desabilitados)
ENABLE_EXTERNAL_SERVICES=false
LOG_LEVEL=error

# Configurações específicas para testes
DISABLE_AUTH_GUARD=false
ENABLE_CORS=true
RATE_LIMIT_DISABLED=true
