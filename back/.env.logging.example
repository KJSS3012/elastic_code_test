# Configurações de Logging

# Nível de log (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Diretório para arquivos de log
LOG_DIR=logs

# Formato dos logs (json, simple, combined)
LOG_FORMAT=json

# Rotação de logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# Logs de performance
LOG_SLOW_QUERIES=true
LOG_SLOW_QUERY_THRESHOLD=1000

# Logs de debug
DEBUG_DATABASE=false
DEBUG_HTTP=false
